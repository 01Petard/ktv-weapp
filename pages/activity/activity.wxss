@import '../template/template.wxss';

.activityView {
  position: relative;
  padding-top: 330px;
  padding-bottom: 50px;
  box-sizing: border-box;
}

.activity-panel {
  margin: 0 15px;
  background: #fff;
}

.activity-panel-header {
  padding: 5px 15px;
  text-align: center;
  background: #f5f5f5;
}

.activity-panel-header image {
  width: 32px;
}

.activity-panel-body {
  padding: 10px 0;
}

.shop-info {
  padding: 0 10px 10px;
  border-bottom: 0.5px solid #ddd;
}

.shop-info-top {
  margin-bottom: 5px;
}

.shop-info-banner {
  width: 90px;
  height: auto;
  float: left;
  margin-right: 10px;
}

.shop-info-banner image {
  width: 100%;
}

.shop-info-name-tel {
  width: calc(100% - 100px);
  float: left;
}

.shop-info-name {
  font-size: 16px;
  color: #222;
}

.shop-info-tel {
  padding-left: 20px;
  color: #ff8519;
  background: url(data:image/png;base64,) left center no-repeat;
  background-size: 20px;
}

.shop-info-address {
  box-sizing: border-box;
  width: 70%;
  float: left;
  color: #666;
  padding-right: 10px;
}

.shop-info-navigation {
  box-sizing: border-box;
  width: 30%;
  height: 24px;
  float: left;
  margin-top: 10px;
  padding-right: 26px;
  text-align: right;
  color: #1f88f4;
  background: url(data:image/png;base64,) right center no-repeat;
  background-size: 24px;
}

.operation-con {
  padding: 10px;
}

.operation-con-payuser {
  margin-bottom: 15px;
}

.operation-con-payuser, .operation-con-share {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.operation-con-money {
  flex: 1;
}

.operation-con-money  text {
  color: #f34040;
  font-size: 15px;
}

.btn-operate-pay, .btn-operate-share {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  line-height: 40px;
  color: #fff;
  text-align: center;
}

.btn-operate-pay {
  background: -webkit-linear-gradient(rgb(255, 97, 52), rgb(254, 45, 24)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgb(255, 97, 52), rgb(254, 45, 24)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(rgb(255, 97, 52), #fe2d18); /* Firefox 3.6 - 15 */
  background: linear-gradient(rgb(255, 97, 52), rgb(254, 45, 24)); /* 标准的语法（必须放在最后） */
}

.btn-operate-share {
  background: -webkit-linear-gradient(rgb(178, 13, 255), rgb(117, 0, 195)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgb(178, 13, 255), rgb(117, 0, 195)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(rgb(178, 13, 255), rgb(117, 0, 195)); /* Firefox 3.6 - 15 */
  background: linear-gradient(rgb(178, 13, 255), rgb(117, 0, 195)); /* 标准的语法（必须放在最后） */
}
