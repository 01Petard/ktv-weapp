@import '../template/template.wxss';

.donation {
  padding: 15px 10px;
}

.donation-step-first {
  margin-bottom: 20px;
}

.donation-step-title {
  margin-bottom: 15px;
  color: #222;
}

.donation-step-input {
  padding: 15px 0;
  margin: 0 5px;
  border: 1px solid #ddd;
  border-radius: 6px;
}
.limit-parts{
  color: #999;
  font-size: 12px;
}
.donation-step-input {
  display: flex;
  font-size: 14px;
  box-shadow: 0 1px 2px rgba(241, 241, 241, .2);
}

.donation-step-input.weui-cells::before, .donation-step-input.weui-cells::after {
  border: 0;
}

.donation-step-input .weui-cell {
  width: 100%;
}

.donation-step-input .weui-cell__hd {
  flex: 2;
}

.donation-step-input .weui-cell__hd .weui-label {
  width: 100%;
  color: #222;
}

.donation-step-input .weui-cell__hd .weui-label text {
  font-size: 12px;
  color: #666;
}

.donation-step-input .weui-cell__bd {
  flex: 1;
}

.donation-step-input .weui-cell__bd input {
  color: #f73f39;
  text-align: right;
}

.donation-step-input .weui-cell__ft {
  flex: 0.2;
  color: #222;
}


.but-donation-block{
  position: fixed;
  display: flex;
  align-items: center;
  left: 0;
  bottom: 0;
  right: 0;
  padding: 15px;
  background: #fff;
}

.donation-info{
  flex: 2;
  margin-right: 10px;
}


.split-number{
  font-size: 16px;
  color: #f73f39;
}
.but-donation{
  flex: 1;
}

/* 分享图片遮罩层 */
.pic-shade{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  transition: 2s linear;
}

.share-pic-con{
  width: 650rpx;
  margin-left: 50rpx;
  margin-top: 50rpx;
  background: #fff;
  border-radius: 8rpx;
  position: relative;
}

.pic-image{
  width: 550rpx;
  height: 860rpx;
  padding: 30rpx 50rpx 30rpx 50rpx;
  border-radius: 8rpx;
}

.pic-text{
  width: 550rpx;
  font-size: 24rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  text-align: center;
}

.pic-close{
  position: absolute;
  right: -30rpx;
  width: 60rpx;
  height: 60rpx;
  top: -30rpx;
}
.userRule{
  padding-left: 5px;
  margin-top: 15px;
}