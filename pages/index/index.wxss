}

/*核销码*/

.home-codeView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: white;
  padding-bottom: 20rpx;
  margin-top: 5rpx;
  position: relative;
}

.code-img {
  margin-right: 10rpx;
}

.home-code {
  font-size: 48rpx;
  color: black;
  font-weight: 800;
  text-align: center;
  letter-spacing: 12rpx;
}

/* 模块入口 */

.module {
  padding: 15px;
  background: #fff;
  /* display: flex; */
  flex-direction: row;
}

.entrance {
  width: 20%;
  float: left;
  padding: 5px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #222;
  position: relative;
}

.h {
  background-color: transparent;
  width: 100rpx;
  height: 100rpx;
  top: 0;
  position: absolute;
}

.entrance image {
  width: 90rpx;
  height: 90rpx;
}

.tokein {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  background: transparent;
}

/* 提示信息 */

.message {
  margin: 20rpx 0 0 0;
  padding: 30rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
}

.message image {
  width: 106rpx;
  height: 73rpx;
}

.swiper_container {
  height: 36rpx;
  width: 560rpx;
}

.swiper_item {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

.message-text {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 26rpx;
  line-height: 36rpx;
  width: 560rpx;
}

.swiper_item.bold {
  font-size: 30rpx;
  color: #222;
}

/* 新品上市 */

.new-product {
  padding: 0 30rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin: 20rpx 0;
}

.new-product-title {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0 0 0;
  justify-content: center;
  align-items: center;
}

.new-product-title image {
  width: 48rpx;
  height: 48rpx;
}

.new-product-title text {
  font-size: 32rpx;
  color: #222;
  margin-left: 10rpx;
}

/* 附近商家 */

.merchant {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-bottom: 20rpx;
  margin-top: 5rpx;
}

.merchant-title {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0 0 0;
  justify-content: center;
  align-items: center;
}

.merchant-title image {
  width: 48rpx;
  height: 48rpx;
}

.merchant-title text {
  font-size: 32rpx;
  color: #222;
  margin-left: 5rpx;
}

.freshcode {
  margin-left: 100rpx;
  padding: 10rpx 15rpx;
  color: #fe656c;
  border: 1px solid #fe656c;
  border-radius: 10rpx;
  font-size: 28rpx;
  position: absolute;
  top: 80rpx;
  right: 100rpx;
}

.nearby-shops-box {
  margin: 30rpx 20rpx;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #efefef;
  padding-bottom: 30rpx;
}

.nearby-shops-img {
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #ddd;
  margin-right: 20rpx;
}

.nearby-shops-con {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.nearby-shops-desc-title {
  color: #222;
  font-size: 32rpx;
  font-weight: 700;
}

.nearby-shops-desc {
  display: flex;
  flex-direction: column;
}

.nearby-shops-slogan {
  display: flex;
  flex-direction: row;
  margin-top: 6rpx;
}

.nearby-shops-coupon {
  border: 1px solid #ff4e00;
  background: #ff4e00;
  margin-right: 20rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.nearby-shops-coupon .icon {
  padding: 0 6rpx;
  color: #fff;
}

.nearby-shops-coupon .text {
  margin: 2rpx 2rpx 2rpx 0;
  background: #fff;
  color: #ff4e00;
  height: 32rpx;
  display: inline-block;
  padding: 0 4rpx;
}

.nearby-shops-discount {
  color: #fff;
  font-size: 20rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}

.nearby-shops-discount text {
  background: #fd9c02;
  margin-right: 10rpx;
  padding: 0 6rpx;
  border-radius: 4rpx;
  line-height: 32rpx;
  height: 32rpx;
  position: relative;
}

.nearby-shops-discount .distance {
  position: absolute;
  right: 30rpx;
  background: #fff;
  font-size: 24rpx;
  color: #222;
  font-weight: 700;
}

.nearby-shops-box-phone {
  width: 48rpx;
  height: 48rpx;
  margin-top: 45rpx;
}

.iconfont.icon-gengduo1 {
  color: #bfbfbf;
  font-size: 40rpx;
  margin-top: 40rpx;
}

.recommend-product-price {
  font-size: 32rpx;
  color: #ee2b46;
  font-weight: 700;
}

.nearby-shops-tel {
  margin-top: 4px;
  padding-left: 20px;
  color: #ff8519;
  background: url(data:image/png;base64,) left center no-repeat;
  background-size: 20px;
}

.nearby-shops-add-nav {
  padding-top: 10px;
}

.nearby-shops-address {
  box-sizing: border-box;
  width: 70%;
  float: left;
  padding-right: 10px;
  color: #999;
}

.nearby-shops-navigation {
  box-sizing: border-box;
  width: 30%;
  float: left;
  margin-top: 10px;
  padding-right: 26px;
  text-align: right;
  color: #1f88f4;
  background: url(data:image/png;base64,) right center no-repeat;
  background-size: 20px;
}

.supernatant {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 8rpx;
  border-radius: 8rpx;
}

.supernatant image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 8rpx;
}

.supernatant text {
  margin-left: 8rpx;
  color: #fff;
  line-height: 50rpx;
  margin-right: 10rpx;
  font-size: 26rpx;
}

.nearby-shops-funny {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.funny-coupon {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 30rpx 0 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.funny-coupon:last-child {
  padding-bottom: 0;
  border-bottom: 0;
}

.funny-coupon-desc {
  padding-top: 4rpx;
  display: flex;
  flex-direction: column;
  width: 500rpx;
}

.funny-coupon-desc-all {
  display: flex;
  flex-direction: row;
  line-height: 30rpx;
}

.funny-coupon-desc-sign {
  width: 30rpx;
  height: 30rpx;
  padding: 0 2px;
  font-size: 20rpx;
  background: #fe656c;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  border-radius: 4px;
}

.funny-coupon-desc-price {
  font-size: 36rpx;
  color: #ff5b63;
  margin: 0 20rpx;
}

.funny-coupon-desc-title {
  font-size: 26rpx;
  color: #151515;
  line-height: 30rpx;
  width: 400rpx;
}

.funny-coupon-origin-price {
  font-size: 26rpx;
  color: #999;
  margin-top: 20rpx;
  margin-left: 50rpx;
  text-decoration: line-through;
}

.funny-coupon-origin-share-price {
  font-size: 26rpx;
  color: #1f88f4;
  margin-top: 20rpx;
  margin-left: 50rpx;
}

.funny-coupon-click {
  display: flex;
  flex-direction: column;
}

.funny-coupon-btn {
  width: 120rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  background: #ff4e00;
  font-size: 28rpx;
  border-radius: 4px;
}

.funny-coupon-residue {
  color: #666;
  font-size: 20rpx;
  width: 120rpx;
  text-align: center;
  margin-top: 15rpx;
}

.day-recommend {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  padding: 20rpx 0;
  background: #fff;
}

.day-recommend-title {
  color: #222;
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.day-recommend-one image {
  width: 750rpx;
}

.day-recommend-two {
  display: flex;
  flex-direction: row;
  border-top: 1rpx solid #eee;
}

.day-recommend-two image {
  width: 50%;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}

.day-recommend-two image:last-child {
  border-right: 0;
}

/* 授权按钮 */

.user-btn {
  width: 300rpx;
  height: 80rpx;
  margin-top: 300rpx;
  margin-left: 225rpx;
  background: #ff7800;
  color: #fff;
  font-size: 24rpx;
  line-height: 80rpx;
}

.entrance .more {
  position: absolute;
  color: #fff;
  right: 10rpx;
  background: #ee2b46;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 15rpx;
  border-radius: 50%;
  font-weight: 700;
}

.entrance .youquan {
  position: absolute;
  width: 46rpx;
  height: 30rpx;
  right: 10rpx;
}

/* 广告页 */

.modal {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  z-index: 20;
  top: 0;
  left: 0;
  transition: 2s linear;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-ad {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  width: 620rpx;
  height: 929rpx;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
}

.bookFrame {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1;
  position: fixed;
  bottom: 0;
}

.bookView {
  margin-top: 130rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  background-color: white;
  position: relative;
  padding: 70rpx 15rpx 10rpx;
  margin-bottom: 50rpx;
}

.close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: -30rpx;
  right: -30rpx;
}

.title {
  text-align: center;
  background-color: rgb(249, 79, 7);
  padding: 16rpx 50rpx;
  font-size: 16px;
  color: white;
  border-radius: 10rpx;
  position: absolute;
  top: -25rpx;
  margin-left: 190rpx;
}

.scrollView {
  width: 100%;
  height: 800rpx;
}

.shop-list {
  display: flex;
  flex-direction: column;
  background-color: white;
}

.shop-item {
  display: flex;
  flex-direction: row;
  background-color: white;
  padding: 25rpx 20rpx;
  border-bottom: 1px solid rgb(201, 202, 203);
}

.shop-img {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  margin-right: 15rpx;
  border: 1rpx solid #ddd;
}

.shop-right {
  display: flex;
  flex-direction: column;
  background-color: white;
  justify-content: flex-start;
  flex: 2;
}

.shop-right-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.shop-top-name {
  font-size: 14px;
  color: black;
  font-weight: 500;
}

.shop-top-distance {
  font-size: 12px;
  color: rgb(249, 79, 7);
  margin-top: 10rpx;
}

.shop-right-bot {
  margin-top: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.shop-bot-add {
  font-size: 12px;
  color: black;
}
