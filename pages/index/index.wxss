@import '../template/template.wxss';

.index-container {
  display: flex;
  flex-direction: column;
}

/* 顶部功能 */

.index-top {
  background: #ff9800;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.index-top-l, .index-top-r {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.index-top-l image {
  width: 26rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.index-top-l text {
  font-size: 32rpx;
  color: #fff;
}

.index-top-r image {
  margin: 0 28rpx;
}

/* 顶部搜索 */

.search {
  padding: 20rpx 30rpx 20rpx 30rpx;
  background: #ff9800;
  position: relative;
}

.search .search-view {
  width: 100%;
  height: 68rpx;
  background: #fff;
  line-height: 75rpx;
  text-align: center;
  box-sizing: border-box;
  border-radius: 10rpx;
}

