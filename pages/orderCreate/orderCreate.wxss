@import '../template/template.wxss';

.order-create {
  margin: 15px 15px 50px;
}

.order-header {
  margin-bottom: 10px;
  background: #fff;
}

.order-store-info, .order-person-number {
  padding: 12px 10px;
}

.order-store-info {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
}

.order-store-name {
  flex: 2;
}

.order-store-room {
  flex: 1;
  text-align: right;
}

.order-person-number .section-title {
  width: 60%;
  float: left;
}

.order-person-number .section-body {
  width: 40%;
  float: left;
  text-align: right;
  color: #666;
}

.input-person-num{
  text-align: right;
  color: #ff8519;
}

.placeholder-input-person-num{
  color: #ff8519;
}

.order-panel {
  padding: 10px;
  background: #fff;
}

.order-panel-header {
  padding: 0 10px 10px;
  border-bottom: 1rpx solid #ddd;
}

.order-panel-body {
  padding: 10px 0;
}

.order-goods-list {
  position: relative;
  padding-bottom: 10px;
  /* margin-bottom: 10px; */
}

